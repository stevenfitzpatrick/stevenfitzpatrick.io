root = true

[*]
end-of-line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[*.js]
quote_type = single
indent_style = space
indent_size = 2
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = inside

[*.html]
quote_type = double